# Calculate exec=/bin/bash ini(update-mavriq.revision)<12

#-ini(update-mavriq.revision,12)-#

_run_() { echo "# $@"; "$@"; }

[ -f /etc/layman/overlays/mavriq-overlay.xml ] && \
    sed -e 's:<name>mavriq</name>:<name>mavriq-overlay</name>:' -i /etc/layman/overlays/mavriq-overlay.xml && exit 0

mkdir -p /etc/layman/overlays
_run_ cp -av /var/lib/layman/mavriq-overlay/mavriq-overlay.xml /etc/layman/overlays/mavriq-overlay.xml && exit 0
_run_ wget https://raw.githubusercontent.com/mavriq/mavriq-overlay/master/mavriq-overlay.xml -O /etc/layman/overlays/mavriq-overlay.xml
